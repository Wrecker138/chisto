body
	-webkit-text-size-adjust: none;
	min-width 320px
	-webkit-tap-highlight-color: transparent;
	font 18px/25px $f-first;

.g-wrapper
	row()
	@media screen and (max-width 1240px)
		padding 0 25px

.g-page
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	min-height: 100vh

.button
	background-color: $c-orange;
	color: #fff;
	user-select: none;
	padding: 15px 25px;
	border-radius: $radiusSmall;
	cursor: pointer;
	display: inline-block;
	white-space: nowrap;
	border: 1px solid transparent;
	font-size: 18px;
	line-height: 1em
	transition: all .3s;
	text-align: center;
	border 1px solid $c-orange
	position: relative
	font-weight 600
	&:hover
		background-color: darken($c-orange, 20%);
		border-color: darken($c-orange, 20%);
		@media screen and (max-width 1060px)
			background-color: $c-orange;
			border-color:$c-orange

	&:active
		transform scale(.98)
		@media screen and (max-width 1060px)
			transform none

	&--big
		padding: 25px 34px;
		@media screen and (max-width 650px)
			padding 20px 6px
			width 100%

	&--small
		font-size 16px

	&--icon
		svg
			width: 30px;
			height: 26px;
		padding 19px
		@media screen and (max-width 650px)
			padding: 13px
			svg
				width 22px
				height 18px

	&__text
		display block

.g-title
	title()

.g-subtitle
	subtitle()

.g-minititle
	minititle()

.scale-enter-active, .scale-leave-active
	transition opacity .375s

.scale-enter, .scale-leave-to
	opacity 0

[v-cloak]
	display: none;

input
	appearance none
	&:disabled
		background-color: transparent