	.feedback
		padding: 55px 0 60px

		&__topline
			display flex
			justify-content: space-between
			align-items: center
			margin-bottom 25px

		&__inner
			background-color: #fff
			display flex
			box-shadow $shadowMedium
			align-items: flex-start
			justify-content: space-between
			padding 105px 110px 100px

		&__title
			margin-bottom 20px

		&__text
			text-big()
			margin-bottom 90px
			b
				white-space nowrap

		&__info
			width 100%
			max-width 600px

		&__arrow
			transform: rotate(-45deg)
			width 100%
			padding-left: 20px
			max-width: 270px
			padding-top: 50px
			svg
				width 100%
				height 100%
				g
					fill $c-whitegrey

@media screen and (max-width 1180px)
		.feedback
			&__inner
				flex-direction: column-reverse
				align-items: center;
				text-align: center;
				padding: 75px 80px 70px

			&__arrow
				padding 0
				max-width 25vw
				margin-bottom: 100px;

@media screen and (max-width 650px)
		.feedback
			&__inner
				padding: 55px 25px 60px
				width calc(100% + 50px)
				margin: 0 -25px

			&__title
				margin-bottom: 0

			&__text
				text-medium()
				margin-bottom: 45px

			&__arrow
				margin-left: 20px;
				margin-bottom: 50px
				max-width: 18vw;